<div id="game_wrapper" class="col-xs">
	<div id="gameCard" class="card text-center bg-faded">
		<div class="card-block">
			<h4 class="card-title has-popover" data-toggle="popover" title="<%= game.title%>" >
			<%= truncate(game.title.html_safe, length: 12)%></h4>
			<h6 class="card-subtitle mb-2"><%= game.creator%></h6>
			<p class="card-text text-muted"><i>released in <%= game.year%></i></p>
			<%= link_to 'Play Trailer', game_path(:id => game.id), class: 'btn btn-secondary',
				method: :get, remote: true %>
		</div>

		<div class="card-footer">
			<div id="edit_game" style="margin: auto;text-align: center">
				<%= link_to 'Edit', {controller: 'games',action: 'edit',id: game.id,token: 'game'},
					method: :get, class: 'btn btn-info btn-sm' %>&nbsp;&nbsp;
				<a href="<%= delete_confirm_game_path%>" data-remote="true" 
					class="btn btn-sm btn-danger" data-params="id=<%= game.id%>">Delete</a>
			</div>
		</div>
	</div>
</div>