<div class="container-fluid text-center">
	
	<div class="row">
		<h1 style="margin: auto;padding-top: 20px;padding-left: 70px">
		<center>Here are the details:-</center></h1><br>
	</div>

	<p style="margin: auto" class="pClass">
	Title: <%= @game.title%><br>
	Creator: <%= @game.creator%><br>
	Year: <%= @game.year%><br>
	<% if !@game.trailer_url.blank? %>
		Trailer: <%= link_to "Play Trailer", @game.trailer_url, target: :_blank %>
	<% end %>

	<%= button_to "Go to Games", {:controller => 'games', :action => 'index'},
		:method => :get, :class => 'btn btn-primary' %>

	<i>You will be redirected after 5 seconds...</i>
	<%= javascript_tag do %>
		window.setTimeout(function(){window.location.href='<%= games_url%>'},5000);
	<% end %>
	</p>
</div>