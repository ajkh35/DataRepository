<%= form_for music, html: {class: 'form-horizontal'} do |f| %>
    
    <% if music.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(music.errors.count, "error") %> prohibited this music from being saved:</h2>

        <ul>
          <% music.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
    	<%= f.label :title, "Title:",class: 'col-sm-2 control-label' %>
    	<div class="col-sm-5">
    	 <%= f.text_field :title, class: 'form-control' %>
    	</div>
    </div>

  	<div class="field form-group">
      <%= f.label :artist, "Artist:",class: 'col-sm-2 control-label' %>
      <div class="col-sm-5">
       <%= f.text_field :artist, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
    	<%= f.label :album, "Album:", class: 'col-sm-2 control-label' %>
    	<div class="col-sm-5">
        <%= f.text_field :album, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :year, "Year:", class: 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= f.number_field :year, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :youtube_url, "YouTube URL:", class: 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= f.text_field :youtube_url, class: 'form-control' %>
      </div>
    </div>

    <div class="submit form-group col-sm-2">
      <% if current_page?(controller: 'musics', action: 'new') || musics_path %>
        <%= f.submit 'Add Song', :class => 'col-sm-12 btn btn-success', :name => 'submit' %>
      <% else %>  
        <%= f.submit 'Update Song', :class => 'col-sm-12 btn btn-success', :name => 'submit' %>
      <% end %>
    </div>
<% end %>