<div style="width: 100%" class="row">
	<div style="margin: auto;padding: 10px">
		<i style="font-size: 50px;color: black">Music Gallery</i>
	</div>
</div>

<div id="musicWell" class="well well-lg bg-white rounded">
	
	<div class="col">
		<div style="padding-bottom: 20px" class="row">
			<%= render partial: 'music', collection: @musics %>
		</div>

		<div style="text-align: center;padding-bottom: 20px">
			<%= link_to "Add a new song", {controller: 'musics', action: 'new'}, 
				class: 'btn btn-primary btn-lg', :method => :get %>
		</div>
	</div>
</div>