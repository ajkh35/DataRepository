<%= form_for(user, html: {class: 'form-horizontal'},remote: true) do |f| %>
	
	<div class="modal-header">
		<h2>Your details:</h2>
	</div>

	<div class="modal-body">	
		<% if user.errors.any? %>
	      <div id="error_explanation">
	        <h2><%= pluralize(user.errors.count, "error") %> prohibited this account creation:</h2>

	        <ul>
	          <% user.errors.full_messages.each do |message| %>
	            <li><%= message %></li>
	          <% end %>
	        </ul>
	      </div>
	    <% end %>

	    <div class="field form-group">
	    	<%= f.label :user_name, "User-Name:",class: 'col-sm-2 control-label' %>
	    	<div class="col-sm-5">
	    		<%= f.text_field :user_name, class: 'form-control' %>
	    	</div>
	    </div>

	    <div class="field form-group">
	    	<%= f.label :first_name, "First Name:",class: 'col-sm-2 control-label' %>
	    	<div class="col-sm-5">
	    		<%= f.text_field :first_name, class: 'form-control' %>
	    	</div>
	    </div>

	    <div class="field form-group">
	    	<%= f.label :last_name, "Last Name:",class: 'col-sm-2 control-label' %>
	    	<div class="col-sm-5">
	    		<%= f.text_field :last_name, class: 'form-control' %>
	    	</div>
	    </div>

	    <div class="field form-group">
	    	<%= f.label :avatar, "Change Picture:",class: 'col-sm-2 control-label' %>
	    	<div class="col-sm-5">
	    		<%= f.file_field :avatar %>
	    	</div>
	    </div>
	</div>    

    <div class="modal-footer">
	    <div class="submit">
	    	<div class="col-sm-1">
    			<%= f.submit 'Update Account',class: 'btn btn-success', :name => 'submit' %>
	    	</div>
	    </div>

	    <a href="#" class="btn btn-primary" data-dismiss="modal">Close</a>
    </div>
<% end %>