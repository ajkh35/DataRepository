<div id="wrapper" class="row">

	<!-- Sidebar -->
	<div id="sidebar-wrapper" class="bg-primary">
		<span>
			<a href="<%= edit_user_path(@user)%>" data-remote="true">
	        	<%= image_tag @user.avatar.url,:class => 'img-circular' %>
	        </a>
	    </span>

	    <ul class="sidebar-nav">
	        <li class="sidebar-brand">
	        	<a id="home" href="#">Home</a>
	        </li>
	        <li>
	            <a id="dashboard" href="/users/<%= @user.id%>?token=dashboard">Dashboard</a>
	        </li>
	        <li>
	            <a id="music" href="/users/<%= @user.id%>?token=music">Music</a>
	        </li>
	        <li>
	            <a id="movies" href="/users/<%= @user.id%>?token=movies">Movies</a>
	        </li>
	        <li>
	            <a id="games" href="/users/<%= @user.id%>?token=games">Games</a>
	        </li>
	        <li>
	            <a id="documents" href="/users/<%= @user.id%>?token=documents">Documents</a>
	        </li>
	        <li id="delete_account">
	        	<span>
	        		<a href="<%= delete_confirm_user_path%>" data-remote="true"
	        		data-params="id=<%= get_current_user.id%>">Delete Account</a>
	    		</span>
	        </li>
	    </ul>
	</div>

	<!-- Page Content -->
	<div id="page-content-wrapper" class="col-lg">
		<div class="container-fluid text-center">
			
			<div class="row">
				<h1 style="margin: auto;">
				<center>Hey, <%= @user.first_name%>!</center></h1>
			</div><br>

			<%= render partial: 'dashboard',locals: { songs: @songs,movies: @movies,games: @games,
													documents: @documents,
													hasMoreMusic: @hasMoreMusic,
													hasMoreMovies: @hasMoreMovies,
													hasMoreGames: @hasMoreGames,
													hasMoreDocuments: @hasMoreDocuments} %>
		</div>
	</div>
</div>

<script>
// Menu Toggle Script 
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
});

// Close sidebar on home click
$("#home").click(function(e) {
	e.preventDefault();
	$("#wrapper").toggleClass("toggled");
	window.location.href="<%= j(root_url)%>"
});

// Set selected menu option from url
var id = "<%= j @menuOption %>";
$("#"+id).addClass('active');
</script>