<div id="<%= movie.id%>" class="col-xs">
	<div id="movieCard" class="card text-center bg-faded hover-shadow">
		<div class="card-block">
			<h4 class="card-title has-popover" data-toggle="popover" data-content="<%= movie.title%>">
				<a href="<%= movie_path(movie)%>" data-remote="true" 
					style="text-decoration: none;color: black">
					<%= truncate(movie.title.html_safe, length: 12)%>	
				</a>
			</h4>
			<h6 class="card-subtitle mb-2"><%= movie.genre%></h6>
			<p class="card-text text-muted"><i>released in year <%= movie.year%></i></p>
			<%= link_to "Play Trailer", show_movie_trailer_path(movie), class: 'btn btn-secondary',
				method: :get, remote: true %>
		</div>
	</div>
</div>