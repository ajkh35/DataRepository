<%= form_for(movie, html: {class: 'form-horizontal'}, remote: true) do |f| %>
    
    <div class="modal-body">
      <% if movie.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

          <ul>
            <% movie.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field form-group">
      	<%= f.label :title, "Title:",class: 'col-sm-2 control-label' %>
      	<div class="col-sm-5">
      	 <%= f.text_field :title, class: 'form-control' %>
      	</div>
      </div>

    	<div class="field form-group">
        <%= f.label :genre, "Genre:",class: 'col-sm-2 control-label' %>
        <div class="col-sm-5">
         <%= f.text_field :genre, class: 'form-control' %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :year, "Year:", class: 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.number_field :year, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <div class="submit">
        <div class="col-sm-1">
          <% if movie.id %>
            <%= f.submit 'Update Movie', :class => 'btn btn-success', :name => 'submit' %> 
          <% else %>
            <%= f.submit 'Add Movie', :class => 'btn btn-success', :name => 'submit' %>
          <% end %>
        </div>
      </div>

      <a href="#" class="btn btn-primary" data-dismiss="modal">Close</a>
    </div>
<% end %>